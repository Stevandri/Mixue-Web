<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== 'undefined' ? title : 'Pesanan' %> - Mixue Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    ::-webkit-scrollbar { width: 8px; }
    ::-webkit-scrollbar-track { background: #f1f1f1; }
    ::-webkit-scrollbar-thumb { background: #E4181F; border-radius: 4px; }
    ::-webkit-scrollbar-thumb:hover { background: #c0141a; }
    body { font-family: 'Inter', sans-serif; background-color: #f7fafc; /* Tailwind gray-100 */ }
    .sidebar-transition { transition: transform 0.3s ease-in-out; }
    /* Bootstrap table styles might still be needed if not fully replaced by Tailwind */
    .table { width: 100%; margin-bottom: 1rem; color: #212529; vertical-align: top; border-color: #dee2e6; }
    .table-bordered { border: 1px solid #dee2e6; }
    .table-bordered th, .table-bordered td { border: 1px solid #dee2e6; }
    .table-hover tbody tr:hover { color: #212529; background-color: rgba(0,0,0,.075); }
    .align-middle { vertical-align: middle !important; }
    .table-light { --bs-table-bg: #f8f9fa; --bs-table-border-color: #dfe2e5; color: #000; }
    .table-light th { color: #000; background-color: #f8f9fa; border-color: #dfe2e5; }
    .form-select {
        display: block;
        width: 100%;
        padding: .375rem 2.25rem .375rem .75rem;
        -moz-padding-start: calc(0.75rem - 3px);
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #fff;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right .75rem center;
        background-size: 16px 12px;
        border: 1px solid #ced4da;
        border-radius: .375rem;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
    }
    .form-select-sm {
        padding-top: .25rem;
        padding-bottom: .25rem;
        padding-left: .5rem;
        font-size: .875rem;
        border-radius: .25rem;
    }

  </style>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="flex min-h-screen">

  <button id="menu-toggle" class="lg:hidden fixed top-4 left-4 z-50 bg-[#E4181F] text-white p-2 rounded-md shadow-lg">
    <i class="bi bi-list text-2xl"></i>
  </button>

  <aside id="sidebar" class="sidebar-transition fixed inset-y-0 left-0 z-40 w-72 bg-[#E4181F] text-white p-6 space-y-6 transform -translate-x-full lg:translate-x-0 flex flex-col shadow-lg">
    <div class="flex items-center gap-3 pb-6 border-b border-white/20">
      <img src="images/logoadmin.png" alt="Mixue Logo" class="h-12 w-12 rounded-full object-cover">
      <span class="text-2xl font-bold">Mixue Admin</span>
    </div>

    <nav class="flex-grow space-y-3">
      <a href="/admin" class="flex items-center justify-between px-4 py-3 rounded-lg hover:bg-white/20 transition-colors duration-200">
        <span class="flex items-center gap-3">
          <i class="bi bi-shop text-xl"></i>
          <span>Semua Produk</span>
        </span>
      </a>
      <a href="/editproduk" class="flex items-center justify-between px-4 py-3 rounded-lg hover:bg-white/20 transition-colors duration-200">
        <span class="flex items-center gap-3">
          <i class="bi bi-pencil-square text-xl"></i>
          <span>Edit Produk</span>
        </span>
      </a>
      <a href="/pesanan" class="flex items-center justify-between px-4 py-3 rounded-lg bg-white text-[#E4181F] shadow transition-colors duration-200">
        <span class="flex items-center gap-3">
          <i class="bi bi-calendar3 text-xl"></i>
          <span class="font-semibold">Pesanan</span>
        </span>
        <span class="bg-white text-[#E4181F] text-xs font-semibold px-2.5 py-1 rounded-full">
          <%= (typeof newOrdersCount !== 'undefined' && newOrdersCount > 0) ? newOrdersCount : '0' %>
        </span>
      </a>
      <a href="/penjualan" class="flex items-center justify-between px-4 py-3 rounded-lg hover:bg-white/20 transition-colors duration-200">
        <span class="flex items-center gap-3">
          <i class="bi bi-cart3 text-xl"></i>
          <span>Penjualan</span>
        </span>
         <span class="bg-white text-[#E4181F] text-xs font-semibold px-2.5 py-1 rounded-full">
           <%= (typeof pendingShipmentCount !== 'undefined' && pendingShipmentCount > 0) ? pendingShipmentCount : '0' %>
         </span>
      </a>
    </nav>

    <div class="pt-6 border-t border-white/20">
      <a href="/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/20 transition-colors duration-200">
        <i class="bi bi-box-arrow-left text-xl"></i>
        <span>Logout</span>
      </a>
    </div>
  </aside>

  <main class="flex-1 p-6 lg:p-10 overflow-y-auto lg:ml-72">
    <h1 class="text-3xl lg:text-4xl font-bold text-gray-800 mb-8">Daftar Pesanan</h1>

    <div class="bg-white p-6 sm:p-8 rounded-xl shadow-lg">
      <div class="overflow-x-auto">
        <table class="table table-bordered table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Pelanggan</th>
              <th>Alamat</th>
              <th>Produk</th>
              <th>Kuantitas</th>
              <th>Status</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
              <% orders.forEach((order) => { %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-2 py-3 md:px-6 md:py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= order.pelanggan_nama %></div>
                  <div class="text-xs text-gray-500">#<%= order.id %></div>
                  <div class="text-xs text-gray-500"><%= new Date(order.tanggal_pesanan).toLocaleDateString('id-ID', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></div>
                </td>
                <td class="px-2 py-3 md:px-6 md:py-4 whitespace-nowrap text-sm text-gray-700 max-w-xs truncate" title="<%= order.alamat_pengiriman %>"><%= order.alamat_pengiriman %></td>
                <td class="px-2 py-3 md:px-6 md:py-4 whitespace-nowrap text-sm text-gray-700">
                  <% if (order.items && order.items.length > 0) { %>
                    <ul class="list-none space-y-1">
                      <% order.items.forEach(item => { %>
                        <li><%= item.nama_produk %> (x<%= item.kuantitas %>)</li>
                      <% }); %>
                    </ul>
                  <% } else { %>
                    N/A
                  <% } %>
                </td>
                <td class="px-2 py-3 md:px-6 md:py-4 whitespace-nowrap text-sm text-gray-700 text-center">
                    <% if (order.items && order.items.length > 0) { %>
                        <%= order.items.reduce((total, item) => total + item.kuantitas, 0) %>
                    <% } else { %>
                        0
                    <% } %>
                </td>
                <td class="px-2 py-3 md:px-6 md:py-4 whitespace-nowrap">
                  <form action="/pesanan/update-status/<%= order.id %>" method="POST" id="form-status-<%= order.id %>" class="inline-form-status">
                    <select name="status" class="form-select form-select-sm focus:ring-1 focus:ring-[#E4181F] focus:border-[#E4181F]" onchange="this.form.requestSubmit()">
                      <option value="Belum diproses" <%= order.status === 'Belum diproses' ? 'selected' : '' %>>Belum diproses</option>
                      <option value="Diproses" <%= order.status === 'Diproses' ? 'selected' : '' %>>Diproses</option>
                      <option value="Dikirim" <%= order.status === 'Dikirim' ? 'selected' : '' %>>Dikirim</option>
                      <option value="Selesai" <%= order.status === 'Selesai' ? 'selected' : '' %>>Selesai</option>
                      <option value="Dibatalkan" <%= order.status === 'Dibatalkan' ? 'selected' : '' %>>Dibatalkan</option>
                    </select>
                  </form>
                </td>
                <td class="px-2 py-3 md:px-6 md:py-4 whitespace-nowrap text-sm font-medium">
                  <button type="submit" form="form-status-<%= order.id %>" class="text-white bg-[#E4181F] hover:bg-[#c0141a] px-3 py-1.5 rounded-md text-xs transition-colors duration-150">
                    Update
                  </button>
                </td>
              </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="6" class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                  Tidak ada pesanan saat ini.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
      <div class="mt-6 flex items-center justify-between border-t border-gray-200 pt-4">
        <div class="flex-1 flex justify-between sm:hidden">
          <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            Previous
          </a>
          <a href="#" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            Next
          </a>
        </div>
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700">
              Menampilkan
              <span class="font-medium">1</span>
              sampai
              <span class="font-medium"><%= orders.length %></span>
              dari
              <span class="font-medium"><%= orders.length %></span>
              hasil
            </p>
          </div>
          <div>
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Previous</span>
                <i class="bi bi-chevron-left h-5 w-5"></i>
              </a>
              <a href="#" aria-current="page" class="z-10 bg-red-50 border-red-500 text-red-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium">
                1
              </a>
              <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Next</span>
                <i class="bi bi-chevron-right h-5 w-5"></i>
              </a>
            </nav>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </main>

  <script>
    const menuToggle = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');
    if (menuToggle && sidebar) {
      menuToggle.addEventListener('click', () => {
        sidebar.classList.toggle('-translate-x-full');
      });
      document.addEventListener('click', (event) => {
        const isClickInsideSidebar = sidebar.contains(event.target);
        const isClickOnMenuToggle = menuToggle.contains(event.target);
        if (!isClickInsideSidebar && !isClickOnMenuToggle && !sidebar.classList.contains('-translate-x-full') && window.innerWidth < 1024) {
          sidebar.classList.add('-translate-x-full');
        }
      });
    }
  </script>
</body>
</html>
